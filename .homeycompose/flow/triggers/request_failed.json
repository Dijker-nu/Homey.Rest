{
    "title": {
        "en": "Request failed"
    },
    "titleFormatted": {
        "en": "Request failed with [[error]] error"
    },
    "hint": {
        "en": "Gets triggered when the 'Perform a request' flow card has failed.\nNote: this does not apply if the server responded with an error message."
    },
    "args": [
        {
            "type": "dropdown",
            "name": "error",
            "title": {
                "en": "Error"
            },
            "values": [
                {
                    "id": "any",
                    "label": {
                        "en": "Any"
                    }
                },
                {
                    "id": "ENOTFOUND",
                    "label": {
                        "en": "Host not found"
                    }
                },
                {
                    "id": "ECONNRESET",
                    "label": {
                        "en": "Connection reseted"
                    }
                },
                {
                    "id": "ECONNREFUSED",
                    "label": {
                        "en": "Connection refused"
                    }
                },
                {
                    "id": "ETIMEDOUT",
                    "label": {
                        "en": "Timeout"
                    }
                }
            ]
        },
        {
            "type": "text",
            "name": "tags",
            "title": {
                "en": "Tags - used to identify this request in the 'on request completed' flow card. Use multiple tags by separating them with an space and set the appropriate tag handling bellow."
            },
            "placeholder": {
                "en": "tag1 tag2 tag3"
            }
        },
        {
            "type": "dropdown",
            "name": "tagHandling",
            "title": {
                "en": "Tag Handling"
            },
            "values": [
                {
                    "id": "none",
                    "label": {
                        "en": "None - gets triggered for all requests"
                    }
                },
                {
                    "id": "containsAny",
                    "label": {
                        "en": "Contains Any - gets triggered if the request has at least one of the tags specified here"
                    }
                },
                {
                    "id": "containsAll",
                    "label": {
                        "en": "Contains All - gets triggered if the request has all of the tags specified here"
                    }
                },
                {
                    "id": "containsNot",
                    "label": {
                        "en": "Contains Not - gets triggered if the request does not contain any of the tags specified here"
                    }
                }
            ]
        }
    ],
    "tokens": [
        {
            "name": "error_message",
            "type": "string",
            "title": {
                "en": "Error message"
            },
            "example": "getaddrinfo ENOTFOUND notexistingurl"
        },
        {
            "name": "error_code",
            "type": "string",
            "title": {
                "en": "Error Code"
            },
            "example": "ENOTFOUND"
        },
        {
            "name": "request_url",
            "type": "string",
            "title": {
                "en": "Request Url"
            },
            "example": "https://example:443/some/path?foo=bar"
        },
        {
            "type": "text",
            "name": "tags",
            "title": {
                "en": "Tags"
            },
            "placeholder": {
                "example": "tag1 tag2 tag3"
            }
        }
    ]
}