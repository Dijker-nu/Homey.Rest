{
    "title": {
        "en": "Request completed"
    },
    "hint": {
        "en": "Gets triggered when the 'Perform a request' flow card has completed it's request\nNote: this also gets triggered when the server responds with an error message."
    },
    "args": [
        {
            "type": "text",
            "name": "tags",
            "title": {
                "en": "Tags - used to identify this request in the 'on request completed' flow card. Use multiple tags by separating them with an space and set the appropriate tag handling bellow."
            },
            "placeholder": {
                "en": "tag1 tag2 tag3"
            }
        },
        {
            "type": "dropdown",
            "name": "tagHandling",
            "title": {
                "en": "Tag Handling"
            },
            "values": [
                {
                    "id": "none",
                    "label": {
                        "en": "None - gets triggered for all requests"
                    }
                },
                {
                    "id": "containsAny",
                    "label": {
                        "en": "Contains Any - gets triggered if the request has at least one of the tags specified here"
                    }
                },
                {
                    "id": "containsAll",
                    "label": {
                        "en": "Contains All - gets triggered if the request has all of the tags specified here"
                    }
                },
                {
                    "id": "containsNot",
                    "label": {
                        "en": "Contains Not - gets triggered if the request does not contain any of the tags specified here"
                    }
                }
            ]
        }
    ],
    "tokens": [
        {
            "name": "responde_code",
            "type": "number",
            "title": {
                "en": "Response Code"
            },
            "example": 200
        },
        {
            "name": "body",
            "type": "string",
            "title": {
                "en": "Response Body"
            },
            "example": "{\n'foo' : 'bar'\n\n}"
        },
        {
            "name": "headers",
            "type": "string",
            "title": {
                "en": "Response Headers"
            },
            "example": "{\n'foo' : 'bar'\n\n}"
        },
        {
            "name": "request_url",
            "type": "string",
            "title": {
                "en": "Request Url"
            },
            "example": "https://example:443/some/path?foo=bar"
        },
        {
            "type": "text",
            "name": "tags",
            "title": {
                "en": "Tags"
            },
            "placeholder": {
                "example": "tag1 tag2 tag3"
            }
        }
    ]
}