            "placeholder": "https://example:443/some/path?foo=bar"
          },
          {
            "type": "dropdown",
            "name": "verb",
            "title": {
              "en": "Http Verb"
            },
            "values": [
              {
                "id": "GET",
                "label": {
                  "en": "Get"
                }
              },
              {
                "id": "POST",
                "label": {
                  "en": "Post"
                }
              },
              {
                "id": "PUT",
                "label": {
                  "en": "Put"
                }
              },
              {
                "id": "PATCH",
                "label": {
                  "en": "Patch"
                }
              },
              {
