{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "ch.philippewechsler.rest",
  "version": "1.0.0",
  "compatibility": ">=4.0.0",
  "brandColor": "#ff4800",
  "sdk": 2,
  "name": {
    "en": "Advanced Rest Client (ARC)"
  },
  "description": {
    "en": "Provides some flow cards that allows you to perform some restfull calls with advanced features such as certificate hanlding, authentication, custom headers and much more"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Philippe Wechsler"
  },
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Request completed"
        },
        "tokens": [
          {
            "name": "responde_code",
            "type": "number",
            "title": {
              "en": "Response Code"
            },
            "example": 200
          },
          {
            "name": "body",
            "type": "string",
            "title": {
              "en": "Response Body"
            },
            "example": "{\n'foo' : 'bar'\n\n}"
          },
          {
            "name": "headers",
            "type": "string",
            "title": {
              "en": "Response Headers"
            },
            "example": "{\n'foo' : 'bar'\n\n}"
          }
        ],
        "id": "request_completed"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Perform a request"
        },
        "args": [
          {
            "type": "text",
            "name": "url",
            "title": {
              "en": "Url"
            }
          },
          {
            "type": "dropdown",
            "name": "verb",
            "title": {
              "en": "Http Verb"
            },
            "values": [
              {
                "id": "GET",
                "label": {
                  "en": "Get"
                }
              },
              {
                "id": "POST",
                "label": {
                  "en": "Post"
                }
              },
              {
                "id": "PUT",
                "label": {
                  "en": "Put"
                }
              },
              {
                "id": "PATCH",
                "label": {
                  "en": "Patch"
                }
              },
              {
                "id": "DELETE",
                "label": {
                  "en": "Delete"
                }
              }
            ]
          },
          {
            "type": "dropdown",
            "name": "bodytype",
            "title": {
              "en": "Body Type"
            },
            "values": [
              {
                "id": "none",
                "label": {
                  "en": "None"
                }
              },
              {
                "id": "text",
                "label": {
                  "en": "Text"
                }
              },
              {
                "id": "json",
                "label": {
                  "en": "Json"
                }
              },
              {
                "id": "js",
                "label": {
                  "en": "Java Script"
                }
              },
              {
                "id": "html",
                "label": {
                  "en": "HTML"
                }
              },
              {
                "id": "xml",
                "label": {
                  "en": "XML"
                }
              }
            ]
          },
          {
            "type": "text",
            "name": "body",
            "title": {
              "en": "Body"
            },
            "placeholder": {
              "en": "{\n    \"foo\" : \"bar\"\n}"
            }
          },
          {
            "type": "autocomplete",
            "name": "headercollection",
            "placeholder": {
              "en": "custom headers"
            },
            "title": {
              "en": "Custom Headers"
            }
          },
          {
            "type": "number",
            "name": "timeout",
            "min": 1,
            "max": 300,
            "step": 1,
            "placeholder": {
              "en": "in seconds"
            },
            "title": {
              "en": "Timeout"
            }
          }
        ],
        "id": "perform_request"
      }
    ]
  }
}